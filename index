  <script>
    // Mappa lingua â†’ PDF
    const pdfLinks = {
      'it': 'LINK_PDF_IT',
      'en': 'LINK_PDF_EN',
      'fr': 'LINK_PDF_FR',
      'de': 'LINK_PDF_DE'
    };

    // Lingua del browser (es: "it-IT" â†’ "it")
    const lang = (navigator.language || navigator.userLanguage || 'en').slice(0,2);

    // Reindirizza automaticamente dopo 1 secondo
    setTimeout(() => {
      if (pdfLinks[lang]) {
        window.location.href = pdfLinks[lang];
      }
    }, 1000);
  </script>
